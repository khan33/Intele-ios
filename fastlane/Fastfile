default_platform(:ios)

platform :ios do

  # -------------------------
  # PR Checks (no deploy)
  # -------------------------
  lane :test do
    scan(
      scheme: "InteleApp",
      devices: ["iPhone 15"],
      clean: true
    )
  end

  # -------------------------
  # Staging Deployment (TestFlight)
  # -------------------------
  lane :beta do
    increment_version_number(
      bump_type: "patch",
      xcodeproj: "ios/InteleApp.xcodeproj"
    )
    increment_build_number(
      xcodeproj: "ios/InteleApp.xcodeproj"
    )

    build_app(
      scheme: "InteleApp",
      export_method: "app-store"
    )

    upload_to_testflight(
      skip_waiting_for_build_processing: true
    )

    commit_version_bump(
      xcodeproj: "ios/InteleApp.xcodeproj",
      message: "chore(ci): bump version & build for TestFlight"
    )
    push_to_git_remote
  end

  # -------------------------
  # Production Deployment (App Store)
  # -------------------------
  lane :release do
    increment_version_number(
      bump_type: "patch",
      xcodeproj: "ios/InteleApp.xcodeproj"
    )
    increment_build_number(
      xcodeproj: "ios/InteleApp.xcodeproj"
    )

    build_app(
      scheme: "InteleApp",
      export_method: "app-store"
    )

    upload_to_app_store(
      submit_for_review: false,
      automatic_release: false
    )

    commit_version_bump(
      xcodeproj: "ios/InteleApp.xcodeproj",
      message: "chore(ci): bump version & build for App Store"
    )
    push_to_git_remote
  end
end
